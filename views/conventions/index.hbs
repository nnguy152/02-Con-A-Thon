<header class="header-bg">
  <a href="/" class="conthon"><span><img src="https://vignette.wikia.nocookie.net/uncyclopedia/images/6/67/Link.gif/revision/latest?cb=20090506153048" style="width: 50px;"></span>Con-A-Thon</a>
  <nav class="logs">
    <a href='#' class="menu">Logout</a>
  </nav>
  <p class="about" style="width: 600px;">Maximize Your Geek by Planning Out Your Cons!</p>
</header>

<div class="ten-container">
<h1 class="ten-header">Profile</h1>
  <div class="my-con">
    {{!-- <div class="calendar" style='width:300px;border:2px black solid;height:225px;overflow:hidden;float:right;'>
      <iframe src="https://calendar.google.com/calendar/embed?showTitle=0&amp;showNav=0&amp;showDate=0&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=0&amp;showTz=0&amp;height=300&amp;wkst=1&amp;bgcolor=%232952A3&amp;src=%23contacts%40group.v.calendar.google.com&amp;color=%2328754E&amp;src=en.usa%23holiday%40group.v.calendar.google.com&amp;color=%23B1440E&amp;ctz=America%2FNew_York" width="300" height="250" frameborder="0" scrolling="no"></iframe>    
    </div> --}}
    <ul class="my-cons-list">
      {{#each con}}
        <li><a href="#popup{{this.id}}">{{this.name}}</a></li>

        <div id="popup{{this.id}}" class="overlay" style="background:none;">
          <div class="popup my-con-edit">
            <a class="xed" href="#">&times;</a>
            <ul class="content">
              <li>{{this.name}}</li>
              <li>{{this.date}}</li>
              <li>{{this.location}}</li>
              <li><a href="{{this.url}}">Visit their Website</a></li>
            </ul>

            <form class="edit-form" action="/Conventions/{{this.id}}?_method=put" method="POST">
                <h4>Edit?</h4>
                <p>
                <label for="name">Name</label>
                <input type="text" name="name" class="input">
                <br/>
                <label for="date">Date</label>
                <input type="text" name="date" class="input">
                <br/>
                <label for="location">Location</label>
                <input type="text" name="location" class="input">
                <br/>
                <label for="url">URL</label>
                <input type="text" name="url" class="input">
              </p>
              <input type="submit" value="Update" class="buttons update">
            </form>

            <form action="/Conventions/{{this.id}}?_method=delete" method="POST">
              <input type="submit" value="Delete"  class="buttons delete">
            </form>

          </div>
        </div>
      {{/each}}

      <a href="#popup" style='vertical-align:bottom;'>Add A Con!</a>
    </ul>
  </div>

  <div id="popup" class="overlay">
    <div class="popup">
      <a class="close" href="index"></a>
        <h1>Add in Your Convention</h1>
        <form action="/Conventions" method="POST">
          <p>
            <label for="name">Name</label>
            <input type="text" name="name" class="input">
            <br/>
            <label for="date">Date</label>
            <input type="text" name="date" class="input">
            <br/>
            <label for="location">Location</label>
            <input type="text" name="location" class="input">
            <br/>
            <label for="url">URL</label>
            <input type="text" name="url" class="input">
          </p>
          <input type="submit" value="Create" class="buttons">
        </form>
    </div>
  </div>
</div>
