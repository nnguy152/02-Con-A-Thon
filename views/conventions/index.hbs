<h1>Hi</h1>


<ul>
  {{#each con}}
    <li><a href="#popup{{this.id}}">{{this.name}}</a></li>
    <div id="popup{{this.id}}" class="overlay">
      <div class="popup">
        <a class="close" href="index"></a>
        <ul class="content">
          <li>{{this.name}}</li>
          <li>{{this.date}}</li>
          <li>{{this.location}}</li>
          <li><a href="{{this.url}}">Visit their Website</a></li>
        </ul>
        <form action="/Conventions/{{this.id}}?_method=delete" method="POST">
          <input type="submit" value="delete">
        </form>
      </div>
    </div>
  {{/each}}
</ul>

<a href="#popup">Not interested in any of the conventions listed? Add your own!</a>

<div id="popup" class="overlay">
  <div class="popup">
    <a class="close" href="index"></a>
      <h1>Add in Your Convention</h1>
      <form action="/Conventions" method="POST">
        <p>
          <label for="name">Name</label>
          <input type="text" name="name">
          <br/>
          <label for="date">Date</label>
          <input type="text" name="date">
          <br/>
          <label for="location">Location</label>
          <input type="text" name="location">
          <br/>
          <label for="url">URL</label>
          <input type="text" name="url">
          <br/>
          <label for="genre">Anime, Comic, or Gaming?</label>
          <input type="text" name="genre">
        </p>
        <input type="submit" value="Create">
      </form>
  </div>
</div>