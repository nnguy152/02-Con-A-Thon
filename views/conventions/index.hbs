<div class="displayed">
<header class="header-bg">
  <a href="/" class="conthon"><span><img src="https://vignette.wikia.nocookie.net/uncyclopedia/images/6/67/Link.gif/revision/latest?cb=20090506153048" style="width: 50px;"></span>Con-A-Thon</a>
  <nav class="logs">
    <a href='/conventions' class="menu nav-links">Logout</a>
  </nav>
  <p class="about" style="width: 600px;">Maximize Your Geek by Planning Out Your Cons!</p>
</header>

<main class="ten-container profile">
  <h1 class="ten-header">Profile</h1>
    <div class="line"></div>
    <div class="my-con">
      <ul class="my-cons-list">
          <iframe src="https://calendar.google.com/calendar/embed?showTitle=0&amp;showNav=0&amp;showPrint=0&amp;showTabs=0&amp;showCalendars=0&amp;showTz=0&amp;height=200&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=ht3jlfaac5lfd6263ulfh4tql8%40group.calendar.google.com&amp;color=%232F6309&amp;ctz=America%2FNew_York" style="border:2px black solid; margin-top:25px;" width="200" height="150" frameborder="0" scrolling="no"></iframe>
        <h3 class="ten-list-header">Cons To-Go-To</h3>
          <div class="mini-line"></div>
        {{#each con}}
          <li><a class="button cons-list" href="#popup{{this.id}}">{{this.name}}</a></li>

          <section id="popup{{this.id}}" class="overlay" style="background:none;">
            <div class="popup my-con-edit">
              <a class="x" href="#">&times;</a>
              <ul class="content">
                <li><span>Name:</span><a href="{{this.url}}">{{this.name}}</a></li>
                <li><span>When:</span>{{this.date}}</li>
                <li><span>Where:</span>{{this.location}}</li>
                <li style="text-align:left;word-wrap: break-word;word-break: break-all;"><span style="padding-right: 15px">Notes:</span><div style="overflow: scroll;height: 250px;">{{this.description}}</div></li>
              </ul>
              <form class="edit-form" action="/Conventions/{{this.id}}?_method=put" method="POST">
                  <h4>Edit</h4>
                  <p>
                  <label for="name">Name</label>
                  <input type="text" value="{{this.name}}" name="name" class="input text-box">
                  <br/>
                  <label for="date">Date</label>
                  <input type="text" value="{{this.date}}" name="date" class="input text-box">
                  <br/>
                  <label for="location">Location</label>
                  <input type="text" value="{{this.location}}" name="location" class="input text-box">
                  <br/>
                  <label for="url">URL</label>
                  <input type="text" value="{{this.url}}" name="url" class="input text-box">
                </p>
                <h4><button class="buttons" style="color:white;text-decoration:none;width:90px;height:25px;font-size:15px;" href="edit/{{this.id}}">Notes!</button></h4>
                <input type="submit" value="Update" class="buttons update">
              </form>

              <form action="/Conventions/{{this.id}}?_method=delete" method="POST">
                <input type="submit" value="Delete"  class="buttons delete">
              </form>

            </div>
          </section>
        {{/each}}

        <a class="add" href="#popup">Add A Con!</a>
      </ul>
    </div>

    <div id="popup" class="overlay">
      <div class="popup">
        <a class="x" href="#">&times;</a>
          <h1 class="content">Add A Con</h1>
          <form action="/Conventions" method="POST">
            <p>
              <label for="name">Name</label>
              <input type="text" name="name" class="input text-box" required>
              <br/>
              <label for="date">Date</label>
              <input type="text" name="date" class="input text-box">
              <br/>
              <label for="location">Location</label>
              <input type="text" name="location" class="input text-box">
              <br/>
              <label for="url">URL</label>
              <input type="text" name="url" class="input text-box">
            </p>
            <input type="submit" value="Create" class="buttons">
          </form>
      </div>
    </div>
  </div>
</main>





